{
	"name": "tw-reset",
	"version": "0.0.2",
	"author": "Maxwell Barvian",
	"main": "dist/index.js",
	"module": "dist/index.mjs",
	"types": "dist/index.d.ts",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/barvian/tw-reset.git"
	},
	"bugs": {
		"url": "https://github.com/barvian/tw-reset/issues"
	},
	"homepage": "https://github.com/barvian/tw-reset",
	"keywords": [
		"tailwindcss",
		"tailwind"
	],
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"require": "./dist/index.js",
			"import": "./dist/index.mjs"
		},
		"./package.json": "./package.json",
		"./defaultTheme": {
			"types": "./dist/defaultTheme.d.ts",
			"require": "./dist/defaultTheme.js",
			"import": "./dist/defaultTheme.mjs"
		}
	},
	"scripts": {
		"test": "bun test",
		"build": "tsup src/index.ts src/defaultTheme.ts --format esm,cjs --no-splitting --clean && tsc -p tsconfig.build.json --emitDeclarationOnly",
		"prepublishOnly": "pnpm run build && pnpm run test",
		"format": "prettier --write ."
	},
	"files": [
		"dist",
		"package.json",
		"README.md"
	],
	"peerDependencies": {
		"tailwindcss": "^3.2.0"
	},
	"devDependencies": {
		"bun": "^1.0",
		"@types/bun": "^1.0.5",
		"@types/dlv": "^1.1.4",
		"jest-diff": "^29.7.0",
		"map-obj": "^5.0.2",
		"postcss": "^8.4.17",
		"prettier": "^3.0",
		"prettier-plugin-tailwindcss": "^0.5.14",
		"tailwindcss": "^3.2.0",
		"tsup": "^8.0.2",
		"typescript": ">=5.0.0"
	},
	"dependencies": {
		"@tailwindcss/container-queries": "^0.1.1",
		"picocolors": "^1.0.1"
	}
}
